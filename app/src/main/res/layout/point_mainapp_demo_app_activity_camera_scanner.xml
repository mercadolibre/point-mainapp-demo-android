<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryLightColor"
    tools:context=".view.camera.CameraScannerActivity">

    <ImageView
        android:id="@+id/point_mainapp_demo_app_state_img_qr"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:tint="@color/primaryColor"
        app:layout_constraintBottom_toBottomOf="@+id/point_mainapp_demo_app_camera_scanner_title"
        app:layout_constraintEnd_toStartOf="@+id/point_mainapp_demo_app_camera_scanner_title"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/point_mainapp_demo_app_camera_scanner_title"
        app:srcCompat="@drawable/point_mainapp_demo_app_ic_qr_code"
        tools:ignore="UseAppTint" />

    <TextView
        android:id="@+id/point_mainapp_demo_app_camera_scanner_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/ui_10m"
        android:text="@string/point_mainapp_demo_app_cammera_scanner_main_title"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/ui_title_line_height_s"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/point_mainapp_demo_app_camera_qr_scanner_init_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="@dimen/ui_3m"
        android:backgroundTint="@color/dark_grey"
        android:paddingTop="@dimen/ui_3m"
        android:paddingBottom="@dimen/ui_3m"
        android:text="@string/point_mainapp_demo_app_cammera_scanner_start_scan_qr_title"
        android:textAllCaps="false"
        android:textColor="@color/primaryTextColor"
        app:cornerRadius="@dimen/ui_10m"
        app:icon="@drawable/point_mainapp_demo_app_ic_arrow_right"
        app:iconGravity="end"
        app:iconTint="@color/primaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/point_mainapp_demo_app_camera_scanner_title" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/point_mainapp_demo_app_camera_barcode_scanner_init_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="@dimen/ui_3m"
        android:backgroundTint="@color/dark_grey"
        android:paddingTop="@dimen/ui_3m"
        android:paddingBottom="@dimen/ui_3m"
        android:text="@string/point_mainapp_demo_app_cammera_scanner_start_barcode_title"
        android:textAllCaps="false"
        android:textColor="@color/primaryTextColor"
        app:cornerRadius="@dimen/ui_10m"
        app:icon="@drawable/point_mainapp_demo_app_ic_arrow_right"
        app:iconGravity="end"
        app:iconTint="@color/primaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/point_mainapp_demo_app_camera_qr_scanner_init_btn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/point_mainapp_demo_app_camera_qr_scanner_new_init_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="@dimen/ui_3m"
        android:backgroundTint="@color/dark_grey"
        android:paddingTop="@dimen/ui_3m"
        android:paddingBottom="@dimen/ui_3m"
        android:text="@string/point_mainapp_demo_app_cammera_scanner_new_start_scan_qr_title"
        android:textAllCaps="false"
        android:textColor="@color/primaryTextColor"
        app:cornerRadius="@dimen/ui_10m"
        app:icon="@drawable/point_mainapp_demo_app_ic_arrow_right"
        app:iconGravity="end"
        app:iconTint="@color/primaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/point_mainapp_demo_app_camera_barcode_scanner_init_btn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/point_mainapp_demo_app_new_camera_barcode_scanner_init_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="@dimen/ui_3m"
        android:backgroundTint="@color/dark_grey"
        android:paddingTop="@dimen/ui_3m"
        android:paddingBottom="@dimen/ui_3m"
        android:text="@string/point_mainapp_demo_app_cammera_scanner_new_start_barcode_title"
        android:textAllCaps="false"
        android:textColor="@color/primaryTextColor"
        app:cornerRadius="@dimen/ui_10m"
        app:icon="@drawable/point_mainapp_demo_app_ic_arrow_right"
        app:iconGravity="end"
        app:iconTint="@color/primaryColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/point_mainapp_demo_app_camera_qr_scanner_new_init_btn" />

    <ImageView
        android:id="@+id/point_mainapp_demo_app_state_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/point_mainapp_demo_app_camera_scanner_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/point_mainapp_demo_app_ic_check_white" />

    <TextView
        android:id="@+id/point_mainapp_demo_app_camera_scanner_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="center"
        tools:text="Successful reading: %s"
        app:layout_constraintBottom_toTopOf="@+id/point_mainapp_demo_app_camera_scanner_back_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/point_mainapp_demo_app_camera_scanner_title" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/point_mainapp_demo_app_camera_scanner_back_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:backgroundTint="@color/primaryColor"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:textAllCaps="false"
        android:paddingTop="@dimen/ui_2m"
        android:paddingBottom="@dimen/ui_2m"
        app:cornerRadius="@dimen/ui_10m"
        android:text="Return to scanner"
        app:icon="@drawable/point_mainapp_demo_app_white_arrow_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
