<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".view.nfc.NfcActionActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_nfc"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/point_mainapp_demo_app_radius_100"
        android:padding="@dimen/ui_1_5m"
        android:src="@drawable/point_mainapp_demo_app_ic_nfc"
        android:tint="@color/primaryColor"
        app:layout_constraintBottom_toBottomOf="@+id/text_nfc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_nfc" />

    <TextView
        android:id="@+id/text_nfc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/point_mainapp_demo_app_radius_100"
        android:padding="@dimen/ui_1_5m"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_nfc"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/point_mainapp_demo_app_nfc_description_action" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:background="@drawable/point_mainapp_demo_app_runding_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_nfc_detection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/primaryDarkColor"
        android:padding="@dimen/ui_1_5m"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_nfc_detection"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/point_mainapp_demo_app_ic_nfc"
                android:tint="@color/primaryColor"
                app:layout_constraintBottom_toBottomOf="@id/text_nfc_detection"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_nfc_detection" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_nfc_detection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="0.8"
                android:padding="@dimen/ui_1_5m"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_nfc_detection"
                app:layout_constraintEnd_toStartOf="@id/arrow_right"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/point_mainapp_demo_app_detection_nfc_text" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:tint="@color/primaryColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/text_nfc_detection"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/point_mainapp_demo_app_ic_arrow_right" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
